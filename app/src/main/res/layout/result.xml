<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:fillViewport="true"
    >

<RelativeLayout
    android:id="@+id/resultlayout"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">






        <TextView
            android:id="@+id/edges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="italic"

            android:text="TextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edges"
            android:background="#FF00FF00" />

        <TextView
            android:id="@+id/grado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edges"
            android:textSize="24dp"
            android:maxLines="2"
            android:textStyle="italic"
            android:autoSizeTextType="uniform"
            android:text="TextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/grado"
            android:background="#FF00FF00" />

        <TextView
            android:id="@+id/regolare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/grado"
            android:text="TextView"
            android:textSize="24dp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/regolare"
            android:background="#FF00FF00" />

        <TextView
            android:id="@+id/isolato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24dp"
            android:textStyle="italic"
            android:layout_below="@+id/regolare"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/isolato"
            android:background="#FF00FF00" />

        <TextView
            android:id="@+id/connesso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/isolato"
            android:text="TextView"
            android:textSize="24dp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/connesso"
            android:background="#FF00FF00" />

        <TextView
            android:id="@+id/euleriano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/connesso"
            android:text="TextView"
            android:textSize="24dp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/euleriano"
            android:background="#FF00FF00" />

        <io.github.kexanie.library.MathView
            android:id="@+id/definizioni"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/euleriano"
            android:layout_marginTop="50dp"
            auto:engine="KateX"></io.github.kexanie.library.MathView>


</RelativeLayout>
</ScrollView>
